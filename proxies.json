{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "devices-get": {
            "matchCondition": {
                "route": "/api/devices",
                "methods": [
                    "GET"
                ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/get-devices"
        },
        "devices-get-approved": {
            "matchCondition": {
                "route": "/api/devices/approved",
                "methods": [
                    "GET"
                ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/get-devices?approved=true"
        },     
        "devices-get-unapproved": {
            "matchCondition": {
                "route": "/api/devices/unapproved",
                "methods": [
                    "GET"
                ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/get-devices?approved=false"
        },           
        "device-by-id": {
            "matchCondition": {
                "route": "/api/device/{id}",
                "methods": [
                    "GET"
                ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/get-device?id={id}"
        },
        "device-add": {
            "matchCondition": {
                "route": "/api/device",
                "methods": [
                    "POST"
                ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/post-device"
        },
        "device-approve": {
            "matchCondition": {
                "route": "/api/device",
                "methods": [
                    "PUT"
                ]
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/put-device"
        }
    }
}